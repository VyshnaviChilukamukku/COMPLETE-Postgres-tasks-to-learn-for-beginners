CREATE TABLESPACE Request For New DB creation Request:-
------------------------------------------------------------
CREATE TABLESPACE analytics_rgm_store_prod_01_tbspc OWNER postgres LOCATION '/pg_data/data/pg_tblspc/analytics_rgm_store_prod_01_tbspc';
CREATE DATABASE db_osa_altria_dev_01
WITH
OWNER = postgres
ENCODING = 'UTF8'
LC_COLLATE = 'en_US.UTF-8'
LC_CTYPE = 'en_US.UTF-8'
TABLESPACE = db_osa_altria_dev_01_tbspc
CONNECTION LIMIT = -1;

